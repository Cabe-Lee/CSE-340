<h1>Edit Inventory Item</h1>

<%- messages() %>

<% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li><br>
    <% }) %>
  </ul>
<% } %>

<form id="updateForm" class="account-form" method="POST" action="/inv/update-inventory">
    <h4>ALL FIELDS ARE REQUIRED</h4>

    <label>Classification</label>
    <%- classificationList %>

    <label for="item_make">Make</label>
    <input type="text" id="item_make" name="inv_make" placeholder="Min of 3 characters" pattern="[a-zA-Z\s]{3,}" value="<%= inv_make %>" required>

    <label for="item_model">Model</label>
    <input type="text" id="item_model" name="inv_model" placeholder="Min of 3 characters" pattern="[a-zA-Z\s]{3,}" value="<%= inv_model %>" required>

    <label for="item_description">Description</label>
	  <input type="text" id="item_description" name="inv_description" value="<%= inv_description %>" required>
	
    <label for="image_path">Image Path</label>
    <input type="text" id="image_path" name="inv_image" value="<%= inv_image %>" required>

    <label for="thumbnail_path">Thumbnail Path</label>
    <input type="text" id="thumbnail_path" name="inv_thumbnail" value="<%= inv_thumbnail %>" required>

    <label for="item_price">Price</label>
	  <input type="number" id="item_price" name="inv_price" placeholder="Decimal or integer" value="<%= inv_price %>" required>

    <label for="item_year">Year</label>
    <input type="text" id="item_year" name="inv_year" placeholder="4-digit year" pattern="[0-9]{4}" value="<%= inv_year %>" required>

    <label for="item_miles">Miles</label>
    <input type="number" id="item_miles" name="inv_miles" placeholder="Digits only" value="<%= inv_miles %>" required>
	
    <label for="item_color">Color</label>
    <input type="text" id="item_color" name="inv_color" pattern="[a-zA-Z]+" value="<%= inv_color %>" required>

    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <button type="submit" disabled>Update Item</button>
</form>

<script src="/js/inv-update.js"></script>
